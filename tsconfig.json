{
  "compilerOptions": {
    "target": "es2017", // Asegúrate de que sea al menos es2015, pero es2017 o esnext es mejor
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Next.js se encarga de la emisión de archivos
    "esModuleInterop": true, // ¡Asegúrate de que esto sea TRUE!
    "module": "esnext", // Esto es importante para el App Router de Next.js
    "moduleResolution": "bundler", // O "node". 'bundler' es recomendado para Next.js 13+
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/seed.ts" // Asegúrate de que tu script de seed esté incluido
  ],
  "exclude": ["node_modules"]
}